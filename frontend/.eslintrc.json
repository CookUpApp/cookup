{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:jest/recommended",
        "plugin:jest/style",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {
        "jsx-a11y/label-has-associated-control": [
            2,
            {
                "assert": "either"
            }
        ],
        "jsx-a11y/anchor-is-valid": "off"
    }
}