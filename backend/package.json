    "koa-body": "^4.2.0",
    "koa-jwt": "^4.0.1",
    "koa-logger": "^3.2.1",
    "koa-route": "^3.2.0",
    "koa-session": "^6.2.0",
    "koa-session-mongoose": "^3.0.1",
    "koa-static": "^5.0.0",
    "mongoose": "^5.12.3",
    "otplib": "^12.0.1",
    "twilio": "^3.60.0"
  },
  "eslintConfig": {
